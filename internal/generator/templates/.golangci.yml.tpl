version: "2"

run:
  timeout: 5m

formatters:
  # Enable specific formatter.
  # Default: [] (uses standard Go formatting)
  enable:
    - gci
    - gofmt
    - goimports

linters:
  enable:
    - govet
    - errcheck
    - staticcheck
    - unused
    - gocyclo
    - ineffassign
    - misspell
    - unconvert
    - unparam
    - gocritic
    - revive

issues:
  exclude-use-default: false
